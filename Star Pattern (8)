import java.util.Scanner;
public class Solution {


	public static void main(String[] args) {
        
        Scanner s = new Scanner(System.in);
		int N = s.nextInt();
		int i = 1;
		while(i<=N) {
			int j = N;
			while(j>i) {
				System.out.print(" ");
				j = j - 1;
				
			}int k = 1;
			while(k<=(2*i)-1) {
				System.out.print("*");
				k = k + 1;
			} System.out.println();
			i = i + 1;
		}
    }

}
